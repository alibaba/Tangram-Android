<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/tangram_linearscrollview_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tangram_linearscrollview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:background="@android:color/holo_blue_bright"
        tools:layout_height="203dp" />

    <FrameLayout
        android:id="@+id/tangram_linearscrollview_indicator_container"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tangram_linearscrollview_indicator_bg">

        <FrameLayout
            android:id="@+id/tangram_linearscrollview_indicator"
            android:layout_width="26dp"
            android:layout_height="3dp"
            android:background="@drawable/tangram_linearscrollview_indicator" />
    </FrameLayout>
</merge>